Package: SCoRES
Title: Simultaneous Confidence Region Excursion Sets
Version: 0.1.0
Authors@R: 
    c(
      person(given = "Zhuoran", family = "Yu", ,"angela.yu@emory.edu", role = c("aut", "cre")),
